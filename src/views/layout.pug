doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{title || "Eventify Pro - ÉpicaSoft"}

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

    style.
      footer {
        text-align: center;
        padding: 20px 0;
        margin-top: 40px;
        color: #888;
        font-size: 0.9rem;
      }
      footer img {
        height: 120px;
        margin-bottom: 5px;
      }

  body(class="bg-dark text-light")

    block content

    footer
      // esta ruta coincide con app.use("/img", ...)
      img(src="/img/logoEpicaColor.png" alt="ÉpicaSoft")
      br
      | Creación de ÉpicaSoft – Todos los derechos reservados © #{new Date().getFullYear()}

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
