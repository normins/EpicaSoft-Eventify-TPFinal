extends ./layout.pug

block content
    nav.navbar.navbar-expand-lg.navbar-dark.bg-black.shadow
      .container-fluid
        a.navbar-brand(href="/panel") Eventify Pro
        if user
          span.navbar-text.ms-auto #{user.name || user.email}

    .container.py-5
      h1.mb-4.text-center Panel de administración
      p.text-center.text-light-50.mb-5 Acá podés gestionar eventos, proveedores, invitados y gastos.

      .row.g-4
        .col-md-3
          .card.bg-secondary.border-0.shadow
            .card-body.text-center
              h5.card-title.mb-2 Eventos
              p.card-text.text-light-50 Crear, modificar y visualizar
              a.btn.btn-light.btn-sm(href="/panel/eventos") Gestionar Eventos
        .col-md-3
          .card.bg-secondary.border-0.shadow
            .card-body.text-center
              h5.card-title.mb-2 Proveedores
              p.card-text.text-light-50 Administrar los servicios
              a.btn.btn-light.btn-sm(href="/panel/proveedores") Gestionar Proveedores
        .col-md-3
          .card.bg-secondary.border-0.shadow
            .card-body.text-center
              h5.card-title.mb-2 Invitados
              p.card-text.text-light-50 Definir y revisar lista de invitados
              a.btn.btn-light.btn-sm(href="/panel/invitados") Gestionar Invitados
        .col-md-3
          .card.bg-secondary.border-0.shadow
            .card-body.text-center
              h5.card-title.mb-2 Gastos
              p.card-text.text-light-50 Control de presupuesto
              a.btn.btn-light.btn-sm(href="/panel/gastos") Gestionar Gastos

      .mt-5.text-center
        form(method="post" action="/logout")
          button.btn.btn-outline-light(type="submit") Cerrar sesión

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
