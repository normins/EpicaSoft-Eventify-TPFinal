doctype html
html
  head
    meta(charset="utf-8")
    title Login - Eventify Pro
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body(class="bg-dark d-flex align-items-center justify-content-center vh-100")
    .card.bg-secondary.shadow-lg(style="min-width: 320px; max-width: 400px;")
      .card-body
        h2.text-center.text-light.mb-4 Eventify Pro
        p.text-center.text-light-50.mb-4 Ingresá para administrar tus eventos
        form(method="post" action="/api/auth/login")
          .mb-3
            label.form-label.text-light(for="email") Email
            input#email.form-control(type="text" name="email" placeholder="admin@eventify.com" required)
          .mb-3
            label.form-label.text-light(for="password") Contraseña
            input#password.form-control(type="password" name="password" placeholder="grupo1" required)
          button.btn.btn-light.w-100.mt-2(type="submit") Ingresar
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

